

<h1>Listing Types</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.color %></td>
        <td><%= link_to 'Show', type, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_type_path(type), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

